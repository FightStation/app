{
  "expo": {
    "name": "Fight Station",
    "slug": "fight-station",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0A"
    },
    "scheme": "fightstation",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fightstation.app",
      "associatedDomains": [
        "applinks:fightstation.app"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0A"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.fightstation.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "fightstation.app",
              "pathPrefix": "/"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "single",
      "backgroundColor": "#000000"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Fight Station to use your location to find nearby gyms and events."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Fight Station to access your photos to upload profile pictures."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366f1",
          "sounds": [
            "./assets/notification.wav"
          ]
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Fight Station to access your photo library to save watermarked videos.",
          "savePhotosPermission": "Allow Fight Station to save watermarked videos to your gallery.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-localization",
      "expo-font"
    ],
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#6366f1",
      "androidMode": "default",
      "androidCollapsedTitle": "New notification"
    }
  }
}
